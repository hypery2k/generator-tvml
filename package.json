{
  "name": "generator-tvml",
  "version": "0.3.0-dev",
  "description": "Scaffold TVML Apps which can be developed with ES2015 modules using webpack including livereload",
  "main": "app/index.js",
  "scripts": {
    "clean":"npm link && rm -rf tmp && mkdir -p tmp",
    "test": "mocha --reporter spec --timeout 3000",
    "pretest": "eslint app/*.js && nsp check",
    "e2e": "cd tmp && yo .. --appname='test' ---appid='com.test'",
    "post-e2e":"cd tmp && xcodebuild clean build -sdk appletvos10.0 -configuration Debug CODE_SIGN_IDENTITY=\"\" CODE_SIGNING_REQUIRED=NO"

  },
  "preferGlobal": "true",
  "files": [
    "app"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypery2k/generator-tvml.git"
  },
  "keywords": [
    "tvml",
    "tvos",
    "apple",
    "yeoman-generator"
  ],
  "dependencies": {
    "chalk": "1.1.3",
    "mkdirp": "0.5.1",
    "yeoman-generator": "0.22.5",
    "yosay": "1.2.0"
  },
  "devDependencies": {
    "async": "2.0.0-rc.6",
    "core-util-is": "1.0.2",
    "eslint": "2.12.0",
    "gruntfile-editor": "1.2.0",
    "is-promise": "2.1.0",
    "mocha": "2.5.3",
    "nopt": "3.0.6",
    "nsp": "2.4.0",
    "underscore.string": "3.3.4",
    "yeoman-assert": "2.1.1",
    "yeoman-test": "1.1.0",
    "yo": "1.8.5"
  },
  "author": "Martin Reinhardt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hypery2k/generator-tvml/issues"
  },
  "homepage": "https://github.com/hypery2k/generator-tvml#readme",
  "engines": {
    "node": ">=4",
    "npm": ">=1.3"
  }
}
